{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Data Behavior Dashboard",
  "version": "0.1.0",
  "identifier": "com.jamie.data-behavior-dashboard",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1422",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Data Behavior Dashboard",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:behavior.db"
      ]
    }
  }
}
