{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsole": { "level": "warn", "options": { "allow": ["error", "log", "warn"] } }
      },
      "style": {
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": true,
            "conventions": [
              { "selector": { "kind": "typeMember" }, "formats": ["camelCase", "snake_case"] },
              {
                "selector": { "kind": "objectLiteralMember" },
                "formats": ["camelCase", "snake_case", "PascalCase"]
              }
            ]
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": ["**", "!**/dist", "!**/node_modules", "!**/src-tauri/target", "!**/coverage"]
  }
}
